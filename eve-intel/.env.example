# Application
ENV=development
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000

# Database - Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=eve_intel
POSTGRES_USER=eve_intel_user
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql+asyncpg://eve_intel_user:change_me_in_production@postgres:5432/eve_intel
DATABASE_URL_SYNC=postgresql+psycopg2://eve_intel_user:change_me_in_production@postgres:5432/eve_intel

# Database - ClickHouse
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_DB=eve_intel
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Redis
REDIS_URL=redis://redis:6379/0
CACHE_TTL_SECONDS=300

# ESI API
ESI_BASE_URL=https://esi.evetech.net/latest
ESI_USER_AGENT=eve-intel/0.1.0 (https://github.com/yourorg/eve-intel)
ESI_RATE_LIMIT_PER_SECOND=20
ESI_MAX_RETRIES=3
ESI_BACKOFF_FACTOR=2

# Market Hubs (comma-separated station IDs)
# Jita 4-4: 60003760, Amarr VIII: 60008494, Dodixie IX: 60011866, Rens VI: 60004588, Hek VIII: 60005686
MARKET_HUBS=60003760,60008494,60011866,60004588,60005686

# Trading Parameters
BROKER_FEE_PCT=3.0
SALES_TAX_PCT=8.0
MIN_LIQUIDITY_ISK_24H=500000000
MIN_EV_ISK=200000000
MIN_NET_MARGIN_PCT=5.0
SLIPPAGE_BUFFER_PCT=2.0

# Scheduler
INGESTION_CRON_SCHEDULE=0 */4 * * *
ANALYTICS_CRON_SCHEDULE=15 */4 * * *

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
